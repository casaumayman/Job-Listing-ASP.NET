<header id="header">
    <div class="container">
        <div class="row align-items-center justify-content-between d-flex">
            <div id="logo">
                <a href="/Home/Index"><img width="130px" height="28px" src="/img/logo.png" alt="logo" /></a>
            </div>
            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li class="menu-active"><a href="/Home/Index">Trang chủ</a></li>
                    <li><a href="/Home/About">Giới thiệu</a></li>
                    <li><a href="/Home">Công việc</a></li>
                    <li><a href="/Home">Ủng hộ</a></li>
                    <li><a href="/Home">Tuyển dụng</a></li>
                    <li><a href="/Home">Liên hệ</a></li>
                    @if (Session["Candidate"] == null && Session["Employer"] == null)
                    {
                        <li class="ticker-btn menu-has-children">
                            <a href="#" class="sf-with-ul">Đăng ký</a>
                            <ul style="display: none;">
                                <li><a href="/Employer/SignUp">Nhà tuyển dụng</a></li>
                                <li><a href="/Candidate/SignUp">Ứng cử viên</a></li>
                            </ul>
                        </li>
                        <li class="ticker-btn"><a href="/Login">Đăng nhập</a></li>
                    }
                    else
                    {
                        if (Session["Candidate"] != null)
                        {
                            //Candidate logined
                            DoAnLapTrinhWeb.Models.Candidate account = new DoAnLapTrinhWeb.Models.Candidate();
                            account = (DoAnLapTrinhWeb.Models.Candidate)Session["Candidate"];
                            <li class="ticker-btn menu-has-children">
                                <a href="#" class="sf-with-ul">@account.Name</a>
                                <ul style="display: none;">
                                    <li><a href="/Candidate/Details/@account.Id_Candidate">Thông tin cá nhân</a></li>
                                    <li><a href="/Candidate/SearchEmployer">Tìm kiếm công ty</a></li>
                                    <li><a href="/Candidate/SearchPost">Tìm kiếm công việc</a></li>
                                    <li><a href="/Login/Logout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            //Employer logined
                            DoAnLapTrinhWeb.Models.Employer accout = new DoAnLapTrinhWeb.Models.Employer();
                            accout = (DoAnLapTrinhWeb.Models.Employer)Session["Employer"];
                            <li class="ticker-btn menu-has-children">
                                <a href="#" class="sf-with-ul">@accout.CompanyName</a>
                                <ul style="display: none;">
                                    <li><a href="/Post/Create">Đăng tin tuyển dụng</a></li>
                                    <li><a href="/Post/">Danh sách các bài đăng</a></li>
                                    <li><a href="/Employer/SearchCandidate">Tìm kiếm ứng cử viên</a></li>
                                    <li><a href="/Employer/ListApplication">Ứng cử viên nộp đơn</a></li>
                                    <li><a href="/Employer/Report">Thống kê số lượt ứng tuyển</a></li>
                                    <li><a href="/Login/Logout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </div>
</header>


@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/LayoutSingle.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <br>
        @if (ViewBag.Err != null)
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Err</div>
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-3">

                    </div>
                    <div class="form-group col-md-6" style="text-align: center">
                        <label class="control-label">Tên tài khoản</label>
                        <div>
                            <input class="form-control" name="UserName" type="text" required />
                        </div>
                    </div>
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-3">

                    </div>
                    <div class="form-group col-md-6" style="text-align: center">
                        <label class="control-label">Mật khẩu</label>
                        <div>
                            <input class="form-control" name="Password" type="password" required />
                        </div>
                    </div>
                    <div class="col-md-3">

                    </div>
                </div>
            </div>
            <div style="width: 50%; margin-left:25%" class="form-group">
                <button type="submit" style="width: 100%" class="btn btn-success">Đăng Nhập</button>
            </div>
        </div>
    </div>
}


